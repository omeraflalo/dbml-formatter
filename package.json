{
  "name": "dbml-formatter",
  "displayName": "DBML Formatter - The best and only DBML formatter",
  "description": "Format .dbml files by parsing and re-exporting DBML using @dbml/core.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/omeraflalo/dbml-formatter"
  },
  "publisher": "Omer Aflalo",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dbml"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dbml",
        "aliases": [
          "DBML",
          "dbml"
        ],
        "extensions": [
          ".dbml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dbml",
        "scopeName": "source.dbml",
        "path": "./syntaxes/dbml.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0"
  },
  "dependencies": {
    "@dbml/core": "^3.9.5",
    "vsce": "^2.15.0"
  }
}
